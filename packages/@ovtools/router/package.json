{
  "name": "@ovtools/router",
  "version": "0.0.0-dev",
  "license": "MIT",
  "description": "State machine-driven router for Overmind applications",
  "keywords": [
    "overmind",
    "router",
    "state machine",
    "react"
  ],
  "author": "Henri Hulski <henri@sancode.it>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henri-hulski/overmind-tools.git"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./es/index.js"
      },
      "require": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    }
  },
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build": "tsdown",
    "coverage": "vitest run --coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "overmind": ">=28.2.1 <29.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "jsdom": "^27.2.0",
    "overmind": "^28.2.1",
    "tsdown": "^0.17.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
